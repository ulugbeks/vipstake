<div class="pb__table-block" id="{{ id }}">
    <div class="pb__table-controls">
        <div class="pb__table-settings">
            <button class="pb__table-settings-button">
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="#000000"
                     height="800px"
                     width="800px" version="1.1" id="Layer_1" viewBox="0 0 455 455" xml:space="preserve">
