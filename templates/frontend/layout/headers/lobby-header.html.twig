        {% include 'frontend/layout/headers/partials/_logo.html.twig' %}
        {% include 'frontend/layout/headers/partials/_nav.html.twig' %}
        <!-- ! button-->
        <div class="menu__buttons">
            {% if is_granted('IS_AUTHENTICATED') %}
                <a href="{{ path('app_logout') }}" type="button" class="menu__buttons--login button white"><span>Log Out</span></a>
