{% block labels_row %}
    <style>
        .label__add-window {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            align-items: center;
            justify-content: center;
            display: flex;
            background: rgba(0, 0, 0, .1);
            z-index: 99;
        }

        .label__add-form {
            display: flex;
            flex-direction: column;
            max-width: 414px;
            width: 100%;
            background: #fff;
            border-radius: 8px;
            padding: 15px;
        }

        .label__add-form [type=text] {
            padding: 6px 10px;
            margin-right: 16px;
        }

        .label__add-form [type=color] {
            width: 40px;
            height: 40px;
            padding: 0;
        }

        .label__add-form .input-box {
            display: flex;
            margin-bottom: 18px;
        }

        .label__add-form button {
            text-align: center;
            max-width: 140px;
            margin: 0 auto;
            width: 100%;
            justify-content: center;
        }

        .labels-container{
            display: flex;
            flex-wrap: wrap;
        }

        .labels__item {
            color: #fff;
            padding: 8px 24px 8px 8px;
            position: relative;
            border-radius: 8px;
            font-size: 14px;
            margin-right: 10px;
            margin-bottom: 10px;
        }

        .labels__item .delete {
            top: 4px;
            right: 4px;
            font-size: 12px;
            cursor: pointer;
            position: absolute;
        }
    </style>

    {% set fieldId = uniqueid('labels') %}
    <div class="ui__form-row labels-type-field" id="{{ fieldId }}">
        <label for="">
            Labels
        </label>
        <div class="labels-container">

        </div>

        <div class="add-block">
            <button type="button" class="ui__button-add labels__add" id="add-label">Add label</button>
        </div>

        <div class="label__add-window" style="display:none;">
            <div class="label__add-form">
                <div class="input-box">
                    <input type="text" class="label-name" name="label-name" placeholder="Label text">
                    <input type="color" class="label-color" name="label-color">
                </div>

                <button class='insert-label ui__button-add' type="button">Add</button>
            </div>
        </div>

        <input type="hidden" name="{{ full_name }}" value="{{ value }}">
    </div>
{% endblock %}
