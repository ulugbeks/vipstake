        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M2 8L14 8" stroke="#1890FF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M8 2L8 14" stroke="#1890FF" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>

        Add
    </a>
{% endmacro %}

{% macro custom(route, text) %}
    <a href="{{ route }}" class="ui__button-add">
        {{ text }}
    </a>
{% endmacro %}


