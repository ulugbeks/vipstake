{% macro select(choices, fields, class, filter) %}
    <div class="ui__form">
        <select class="{{ class }}">
            <option value="">All</option>
            {% for item in choices %}
                {% set value = attribute(item, fields.value) %}
                <option value="{{ value }}" {% if value == app.request.get(filter) %}selected{% endif %}>
                    {% if '.' in fields.label %}
                        {% set subItemMethod = fields.label | split('.') %}
                        {% set value = attribute(attribute(item, subItemMethod.0), subItemMethod.1) %}
                        {{ value }}
                    {% else %}
                        {% set value = attribute(item, field) %}
                        {{ value }}
                    {% endif %}
                </option>
            {% endfor %}
        </select>
    </div>
{% endmacro %}


