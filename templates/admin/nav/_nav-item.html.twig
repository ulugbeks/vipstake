                </button>
            </div>
            <input type="hidden" name="nav[{{ item.index }}][id]" value="{{ item.entityId }}">
            <input type="hidden" name="nav[{{ item.index }}][index]" value="{{ item.index }}">
            <input type="hidden" name="nav[{{ item.index }}][type]" value="{{ item.entityType }}">
            <input type="hidden" name="nav[{{ item.index }}][parent]" value="">
            <input type="hidden" name="nav[{{ item.index }}][position]" value="{{ item.position }}">
            <input type="hidden" name="nav[{{ item.index }}][real_id]" value="{{ item.id }}">
        </div>
        <div class="children-container">
            <div class="drop-zone">
                {% for child in item.navItems %}
                    {% include 'admin/nav/_nav-item.html.twig' with {"item": child} %}
                {% endfor %}
            </div>
        </div>
    </div>
