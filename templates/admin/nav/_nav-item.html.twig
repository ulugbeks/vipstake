{% if item.entityType != 'Custom' %}
    <div class="nav-item__container" data-nav-id="{{ item.index }}">
        <div class="nav-item">
            <div class="input-row">
                <label for="">Title</label>
                <input type="text" value="{{ item.name }}" name="nav[{{ item.index }}][title]">
            </div>
