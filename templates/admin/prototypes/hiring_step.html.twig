<div class="hiring__step">
    <div class="thumb">
        <div class="ui__form-row">
            <label for="{{ option.slug }}_image">Icon</label>
            <div class="ui__image-upload">
                <div class="thumb__window">
                    <img src="{{ value.image ?? '' }}" class="thumb__img" alt="">
